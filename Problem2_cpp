#include <iostream>
#include <string>
using namespace std;

// Fungsi buatan untuk membalik string
string myReverse(string str) {
    int n = str.length();
    for (int i = 0; i < n / 2; i++) {
        char temp = str[i];
        str[i] = str[n - i - 1];
        str[n - i - 1] = temp;
    }
    return str;
}

// Mesin pembuat sandi (encode)
string encode(string input) {
    string reversed = myReverse(input); 
    string result = "";
    for (int i = 0; i < reversed.length(); i++) {
        int code = (int)reversed[i]; 
        code += 3; // geser ASCII
        result += (char)code;
    }
    return result;
}

// Mesin pengembalian kata asli (decode)
string decode(string input) {
    string shifted = "";
    for (int i = 0; i < input.length(); i++) {
        int code = (int)input[i];
        code -= 3; // kembalikan ASCII
        shifted += (char)code;
    }
    return myReverse(shifted);
}

int main() {
    string kata;
    cout << "Masukkan kata asli: ";
    cin >> kata;

    string sandi = encode(kata);
    cout << "Hasil sandi: " << sandi << endl;

    string asli = decode(sandi);
    cout << "Kata asli hasil decode: " << asli << endl;

    return 0;
}
